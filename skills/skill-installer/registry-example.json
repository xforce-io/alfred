      "source": {
        "type": "git",
        "location": "https://github.com/example/nano-pdf-skill"
      },
      "install": {
        "kind": "uv",
        "package": "nano-pdf",
        "bins": ["nano-pdf"]
      },
      "requires": {
        "bins": ["nano-pdf"],
        "env": []
      }
    },
    "calendar": {
      "name": "Calendar Manager",
      "description": "Manage calendar events and schedules",
      "version": "1.2.0",
      "tags": ["calendar", "scheduling", "time"],
      "source": {
        "type": "git",
        "location": "https://github.com/example/calendar-skill"
      },
      "install": {
        "kind": "npm",
        "package": "@alfred/calendar",
        "bins": ["alfred-calendar"]
      },
